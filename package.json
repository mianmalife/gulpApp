{
  "name": "gulpapp",
  "version": "1.2.6",
  "description": "gulp",
  "main": "src/index.js",
  "scripts": {
    "dev": "rimraf dist && gulp",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "dotenv release-it",
    "commit": "git cz",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mianmalife/gulpApp.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mianmalife/gulpApp/issues"
  },
  "homepage": "https://github.com/mianmalife/gulpApp#readme",
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.2",
    "dotenv-cli": "^6.0.0",
    "execa": "5.1.1",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "husky": "^8.0.1",
    "release-it": "^15.4.1",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true,
        "strictSemVer": true,
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "chore"
            },
            {
              "type": "docs",
              "section": "docs"
            },
            {
              "type": "style",
              "section": "style"
            },
            {
              "type": "refactor",
              "section": "refactor"
            },
            {
              "type": "perf",
              "section": "perf"
            },
            {
              "type": "test",
              "section": "test"
            },
            {
              "type": "build",
              "section": "build"
            },
            {
              "type": "ci",
              "section": "Ci"
            },
            {
              "type": "revert",
              "section": "Revert"
            }
          ]
        }
      }
    },
    "git": {
      "commitMessage": "chore(tag): release v${version}"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
